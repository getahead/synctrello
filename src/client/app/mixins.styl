mixin-button-theme($color, $fill = true, $textColor = false, $customBackgroundColor = none, $shadow = true)
    $lightness = lightness($color)

    -webkit-tap-highlight-color rgba(0, 0, 0, .1)

    if $fill
        background-color $color
        border-color transparent

        if $textColor
            color $textColor

        else if $lightness <= 65%
            color: $colors.white

        else
            color: $colors.dark
    else
        if $textColor
            color $textColor
        else
            color $color
        background none
        border-color $color


    &:active
        if $fill
            background-color darken($color, 15%)
        else
            background-color lighten($color, 90%)

            .button__label
                transform translateY(1px)


    &:disabled
        box-shadow none
        if $fill
            background-color $color

    @media(min-width: $devices.ipad)
        &:hover
            if $fill
                background-color darken($color, 15%)
            else
                background-color lighten($color, 95%)


mixin-placeholder($color, $fontWeight = 400, $letterSpacing = 0, $fontSize = false)
    &::-webkit-input-placeholder
        color $color
        text-overflow ellipsis
        font-weight $fontWeight
        letter-spacing $letterSpacing

        if $fontSize
            font-size $fontSize

    &:-moz-placeholder  /* Firefox 18- */
        color $color
        text-overflow ellipsis
        font-weight $fontWeight
        letter-spacing $letterSpacing

        if $fontSize
            font-size $fontSize

    &::-moz-placeholder  /* Firefox 19+ */
        color $color
        text-overflow ellipsis
        font-weight $fontWeight
        letter-spacing $letterSpacing

        if $fontSize
            font-size $fontSize

    &:-ms-input-placeholder
        color $color
        text-overflow ellipsis
        font-weight $fontWeight
        letter-spacing $letterSpacing

        if $fontSize
            font-size $fontSize


mixin-preview($ratio = 1)
    background-color: $colors.grayLight
    background-size cover
    position relative

    img
        absolute left top
        width 100%
        height 100%
        opacity 0


    if ($ratio)
        &:before
            content ''
            display block
            padding-top (100 / $ratio) %

