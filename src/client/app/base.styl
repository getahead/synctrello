normalize-css()


*
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)

*:focus
    outline none

*
:before
:after
    box-sizing border-box

a
    color inherit
    text-decoration none


html, body, #app
    height 100%

body
    font 14px/1.33 'Open Sans', sans-serif
    font-weight 400
    letter-spacing -0.4px


    @media screen and (-webkit-min-device-pixel-ratio:0)
        select
        textarea
        input
            font-size 16px

img
    max-width 100%
    max-height 100%

.clearfix
    clearfix()
