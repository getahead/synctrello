.boards-switcher
    $itemsPerRow = 4

    display block

    &__item
        margin 10px auto 0

    &__title
        font-size 24px
        font-weight 600
        text-transform uppercase
        letter-spacing -.8px

    &__text
        margin 10px 0
        color: $colors.gray


    &__note
        font-size 12px
        color: rgba($colors.green, .8)

    @media(min-width: $devices.ipad)
        &__items
            margin 0 -15px 20px
            clearfix()


        &__item
            float left
            width (100 / $itemsPerRow)%
            padding 0 15px
            margin-top 20px

            &:nth-child({$itemsPerRow}n + 1)
                clear both
