.search
    position relative
    display block
    max-width 100%


    &__input
        display block
        width 100%

        font-size 12px
        color: $colors.gray
        padding 5px 25px 5px 5px

        outline none
        border: 1px solid $gray.border


    &__suggest
        position absolute
        left 0
        z-index 2

        width 100%
        max-height 132px

        overflow-y auto

        background: $colors.white
        box-shadow 0 0 10px 0 rgba(0, 0, 0, .1)


        &-item
            padding 5px
            font-size 12px
            border-bottom: 1px solid $gray.light
            cursor pointer

            &:hover
                background-color: $gray.light

        &-list
            padding-left 5px
            color: $gray.middle

        &-board
            color: $colors.black

        &-title
            font-weight 600
            font-size 12px

        &-info
            margin-top 3px
            max-width 100%
            color: $colors.gray

            ellipsis()


    &__label
        position relative


    &__icon
        absolute right top
        width 25px
        height 29px

        font-size 14px
        line-height 29px
        text-align center

        color: $colors.blue
        pointer-events none

        .icon
            color: $gray.middle

